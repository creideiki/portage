#!/bin/bash

DIR="${TMPDIR:-/tmp}"

if [ -z "$DIR" -o ! -d "$DIR" -o ! -w "$DIR" ];
then
    DIR=/tmp
fi

cd "$DIR"

PROFILE=`mktemp --directory chromium.XXXXXXXXXX`

if [ -z "$PROFILE" -o ! -d "$PROFILE" ];
then
    echo "mktemp failed"
    exit 1
fi

chromium --user-data-dir="$PROFILE" --incognito "$@"

cd "$DIR"
rm -r "$PROFILE"

if [ -d "$PROFILE" ];
then
    echo "Profile directory $DIR/$PROFILE still exists."
    echo "This may be because we failed to remove it,"
    echo "or because another chromium-ephemeral session"
    echo "grabbed it after we removed it."
    echo "Please investigate."
    exit 2
fi
